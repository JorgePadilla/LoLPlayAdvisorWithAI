<div class="max-w-6xl mx-auto p-6">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">üé¨ Local Replay Viewer</h1>
      <p class="text-gray-600 mt-2"><%= @replay.filename %></p>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Back to Analysis", replay_path(@replay), 
          class: "px-4 py-2 text-gray-600 hover:text-gray-800 transition-colors" %>
    </div>
  </div>

  <!-- Match Timeline -->
  <div class="bg-white rounded-lg shadow mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900 flex items-center">
        <svg class="w-5 h-5 text-indigo-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z"></path>
        </svg>
        ‚è±Ô∏è Match Timeline - <%= @timeline_data[:duration_formatted] %>
      </h2>
    </div>
    
    <div class="p-6">
      <!-- Timeline Bar -->
      <div class="relative mb-6">
        <div class="w-full h-8 bg-gray-200 rounded-lg overflow-hidden flex">
          <% @timeline_data[:phases].each do |phase| %>
            <% width_percent = ((phase[:end] - phase[:start]).to_f / @timeline_data[:duration] * 100).round(1) %>
            <div class="<%= phase[:color] %> h-full flex items-center justify-center text-white text-xs font-medium"
                 style="width: <%= width_percent %>%"
                 title="<%= phase[:name] %>: <%= format_duration(phase[:start]) %> - <%= format_duration(phase[:end]) %>">
              <%= phase[:name] %>
            </div>
          <% end %>
        </div>
        
        <!-- Timeline markers -->
        <div class="absolute top-10 w-full">
          <% [0, @timeline_data[:duration] * 0.25, @timeline_data[:duration] * 0.5, @timeline_data[:duration] * 0.75, @timeline_data[:duration]].each do |time| %>
            <% position_percent = (time.to_f / @timeline_data[:duration] * 100).round(1) %>
            <div class="absolute text-xs text-gray-500" style="left: <%= position_percent %>%; transform: translateX(-50%)">
              <%= format_duration(time.to_i) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Key Moments -->
  <div class="bg-white rounded-lg shadow mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900 flex items-center">
        <svg class="w-5 h-5 text-yellow-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
        üéØ Key Moments
      </h2>
    </div>
    
    <div class="p-6">
      <div class="space-y-4">
        <% @key_moments.each_with_index do |moment, index| %>
          <div class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors cursor-pointer"
               onclick="jumpToTime(<%= moment[:time] %>)">
            <div class="flex-shrink-0 w-16 text-center">
              <div class="text-sm font-medium text-gray-900">
                <%= format_duration(moment[:time]) %>
              </div>
            </div>
            <div class="ml-4 flex-1">
              <div class="text-sm font-medium text-gray-900">
                <%= moment[:title] %>
              </div>
              <div class="text-sm text-gray-500">
                <%= moment[:description] %>
              </div>
            </div>
            <div class="flex-shrink-0">
              <% case moment[:type] %>
              <% when 'start' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Start
                </span>
              <% when 'kill' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  Kill
                </span>
              <% when 'objective' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  Objective
                </span>
              <% when 'end' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                  Victory
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Match Summary -->
  <div class="bg-white rounded-lg shadow mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900 flex items-center">
        <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        üìä Match Summary
      </h2>
    </div>
    
    <div class="p-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="text-center">
          <div class="text-2xl font-bold text-red-600"><%= @match_summary[:total_kills] %></div>
          <div class="text-sm text-gray-500">Total Kills</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-yellow-600"><%= number_with_delimiter(@match_summary[:total_gold]) %>g</div>
          <div class="text-sm text-gray-500">Total Gold</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-purple-600"><%= number_with_delimiter(@match_summary[:total_damage]) %></div>
          <div class="text-sm text-gray-500">Total Damage</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold <%= @match_summary[:match_intensity][:color] %>"><%= @match_summary[:match_intensity][:level] %></div>
          <div class="text-sm text-gray-500">Match Intensity</div>
          <div class="text-xs text-gray-400"><%= @match_summary[:match_intensity][:description] %></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Player Highlights -->
  <% if @player_highlights.any? %>
  <div class="bg-white rounded-lg shadow mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900 flex items-center">
        <svg class="w-5 h-5 text-yellow-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
        üåü Player Highlights
      </h2>
    </div>
    
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% @player_highlights.each do |highlight| %>
          <div class="bg-gradient-to-r from-yellow-50 to-orange-50 border border-yellow-200 rounded-lg p-4">
            <div class="flex items-center justify-between mb-2">
              <h3 class="font-medium text-gray-900"><%= highlight[:title] %></h3>
              <span class="text-lg font-bold text-indigo-600"><%= highlight[:value] %></span>
            </div>
            <div class="text-sm text-gray-700">
              <strong><%= highlight[:player] %></strong> 
              <% if highlight[:champion] %>
                (<%= highlight[:champion] %>)
              <% end %>
            </div>
            <div class="text-xs text-gray-500 mt-1"><%= highlight[:description] %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>

  <!-- Replay Instructions -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-6">
    <div class="flex items-start">
      <svg class="w-6 h-6 text-blue-500 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
      </svg>
      <div>
        <h3 class="text-lg font-medium text-blue-900 mb-2">üéÆ About ROFL Replay Files</h3>
        <div class="text-blue-800 space-y-3">
          <div class="bg-blue-100 border border-blue-300 rounded p-3">
            <p class="font-medium">‚ö†Ô∏è Important: ROFL files don't contain video data</p>
            <p class="text-sm">They contain game state data that only the League of Legends client can play back as a "recreation" of the match.</p>
          </div>
          
          <p><strong>üé¨ To Watch the Full Victory Video:</strong></p>
          <ul class="list-disc list-inside ml-4 space-y-1">
            <li><strong>Install League of Legends</strong> (required to play .rofl files)</li>
            <li>Click "Watch Replay" button to open in LoL client</li>
            <li>Fast forward to the end (~<%= @timeline_data[:duration_formatted] %>) to see the victory screen</li>
            <li>Use timeline scrubber to jump to key moments</li>
            <li>Press 'C' to cycle camera modes, '+/-' to control speed</li>
          </ul>
          
          <p class="mt-4"><strong>üìÅ Manual File Opening:</strong></p>
          <ul class="list-disc list-inside ml-4 space-y-1">
            <li>File location: <code class="bg-blue-100 px-1 rounded text-xs"><%= @replay.file_path %></code></li>
            <li>Double-click the .rofl file to open in League of Legends</li>
            <li>If LoL doesn't open, right-click ‚Üí "Open with" ‚Üí League of Legends</li>
          </ul>
          
          <p class="mt-4"><strong>üåê Local Analysis (This Page):</strong></p>
          <ul class="list-disc list-inside ml-4 space-y-1">
            <li>Match timeline and key moments breakdown</li>
            <li>Detailed statistics and player highlights</li>
            <li>Performance analysis and match summary</li>
            <li>No video playback (requires LoL client for that)</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Victory Summary -->
  <% if @replay.game_info[:result] == 'Victory' %>
  <div class="bg-green-50 border border-green-200 rounded-lg p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <svg class="w-8 h-8 text-green-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-lg font-medium text-green-900">üèÜ Victory Achieved!</h3>
        <p class="text-green-800">
          Congratulations on your victory as <strong><%= @replay.game_info[:champion_name] %></strong>! 
          The match lasted <%= @timeline_data[:duration_formatted] %> and ended in a well-deserved win.
        </p>
      </div>
    </div>
  </div>
  <% end %>
</div>

<script>
function jumpToTime(seconds) {
  // This would integrate with a video player or provide instructions
  alert(`Jump to ${formatDuration(seconds)}\n\nTo see this moment:\n1. Open the replay in LoL client\n2. Use the timeline to jump to ${formatDuration(seconds)}`);
}

function formatDuration(seconds) {
  const minutes = Math.floor(seconds / 60);
  const remainingSeconds = seconds % 60;
  return `${minutes}m ${remainingSeconds}s`;
}
</script>

<% content_for :title, "Local Replay Viewer - #{@replay.filename}" %>
